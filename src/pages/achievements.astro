---
import Layout from '@/layouts/Layout.astro';
import { achievements } from '@/data/achievements';
import AchievementCard from '@/components/achievements/AchievementCard';

const searchQuery = Astro.url.searchParams.get('search')?.toLowerCase() || '';
const categoryFilter = Astro.url.searchParams.get('category') || '';
const rarityFilter = Astro.url.searchParams.get('rarity') || '';

const filteredAchievements = achievements.filter(achievement => {
  const matchesSearch = !searchQuery || 
    achievement.title.toLowerCase().includes(searchQuery) ||
    achievement.description.toLowerCase().includes(searchQuery);
  const matchesCategory = !categoryFilter || achievement.category === categoryFilter;
  const matchesRarity = !rarityFilter || achievement.rarity === rarityFilter;
  return matchesSearch && matchesCategory && matchesRarity;
});
---

<Layout title="Achievements - Global Pro-Am Rankings">
  <div class="app-theme">
    <div class="container">
      <div style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 800; background: linear-gradient(135deg, #3B82F6 0%, #9BF00B 100%); -webkit-background-clip: text; background-clip: text; color: transparent; margin-bottom: 0.5rem;">
          🏆 Achievements
        </h1>
        <p style="font-size: 1.25rem; color: var(--color-text-secondary);">
          Unlock badges and showcase your basketball prowess
        </p>
      </div>

      <div class="grid">
        {filteredAchievements.map((achievement) => (
          <AchievementCard achievement={achievement} client:load />
        ))}
      </div>

      {filteredAchievements.length === 0 && (
        <div style="text-align: center; padding: 4rem 0;">
          <p style="font-size: 1.5rem; margin-bottom: 0.5rem;">🔍</p>
          <p class="text-secondary">No achievements found</p>
        </div>
      )}
    </div>
  </div>
</Layout>
