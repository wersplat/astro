---
import Layout from '@/layouts/Layout.astro';
import { createClientServer } from '@/lib/supabaseClient';

const supabase = createClientServer(Astro.cookies);

const { data: champions } = await supabase
  .from('past_champions')
  .select('*')
  .order('year', { ascending: false })
  .limit(50);
---

<Layout title="Pro-Am History - Global Rankings">
  <div class="app-theme">
    <div class="container">
      <div style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 800; background: linear-gradient(135deg, #3B82F6 0%, #9BF00B 100%); -webkit-background-clip: text; background-clip: text; color: transparent; margin-bottom: 0.5rem;">
          Pro-Am History
        </h1>
        <p style="font-size: 1.25rem; color: var(--color-text-secondary);">
          A journey through competitive basketball history
        </p>
      </div>

      <div style="display: flex; flex-direction: column; gap: 2rem;">
        {champions?.map((champ: any) => (
          <a 
            href={`/team/${champ.team_id}`}
            class="paper"
            style="text-decoration: none; color: inherit; display: block; transition: all 0.2s;"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 25px rgba(0, 0, 0, 0.5)';"
            onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='';"
          >
            <div style="display: flex; align-items: center; gap: 1.5rem; flex-wrap: wrap;">
              {champ.champion_logo && (
                <img 
                  src={champ.champion_logo} 
                  alt={champ.team_name || 'Champion'} 
                  style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;"
                />
              )}
              <div style="flex: 1;">
                <h3 style="margin: 0 0 0.5rem; color: var(--color-primary); font-weight: 700;">
                  {champ.team_name} →
                </h3>
                <p class="text-secondary" style="margin: 0;">
                  {champ.is_tournament ? '🏆 Tournament' : '🏀 League'} • {champ.year}
                  {champ.league_name && ` • ${champ.league_name}`}
                  {champ.season && ` Season ${champ.season}`}
                </p>
              </div>
              <span style="padding: 0.5rem 1rem; border-radius: 4px; background: rgba(245, 158, 8, 0.2); color: #F59E08; font-weight: 700; font-size: 1.125rem;">
                🏆 Champion
              </span>
            </div>
          </a>
        ))}
      </div>

      {(!champions || champions.length === 0) && (
        <div class="paper">
          <p class="text-secondary">No championship history found</p>
        </div>
      )}
    </div>
  </div>
</Layout>
