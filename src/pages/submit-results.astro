---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Submit Results - Global Rankings">
  <div style="min-height: 100vh; background-color: #0F172A;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 2rem 1rem;">
      <div style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 800; background: linear-gradient(135deg, #3B82F6 0%, #9BF00B 100%); -webkit-background-clip: text; background-clip: text; color: transparent; margin-bottom: 0.5rem;">
          Submit Match Results
        </h1>
        <p style="font-size: 1.25rem; color: #9CA3AF;">
          Report your tournament and league match results
        </p>
      </div>

      <div style="background-color: #1E293B; padding: 2rem; border-radius: 8px;">
        <h2 style="font-size: 1.5rem; color: #E5E7EB; margin-bottom: 1.5rem;">
          Result Submission
        </h2>
        <p style="color: #9CA3AF;">
          This feature is currently in development. Please contact league administrators to submit match results.
        </p>
      </div>
    </div>
  </div>
</Layout>

